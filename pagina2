    <input type="text" placeholder="R$: Valor" oninput="formatInputValue(this)">
    <button class="transparent-button" onclick="window.location.href='file:///C:/Users/Athila/Desktop/elisa%20bet%20saque/3.html'">_____</button>

    <script>
        function formatInputValue(input) {
            // Remove todos os caracteres que não são números ou ponto
            let value = input.value.replace(/[^0-9.]/g, '');
            
            // Separa a parte inteira da parte decimal
            let parts = value.split('.');
            let integerPart = parts[0] || '';
            let decimalPart = parts[1] || '';

            // Formata a parte inteira com separador de milhares
            integerPart = integerPart.replace(/\B(?=(\d{3})+(?!\d))/g, ',');

            // Limita a parte decimal a dois dígitos
            decimalPart = decimalPart.slice(0, 2);

            // Atualiza o valor no campo de entrada
            input.value = integerPart + (decimalPart ? '.' + decimalPart : '');

            // Desliza o texto para a esquerda
            input.scrollLeft = input.scrollWidth;
        }
    </script>
